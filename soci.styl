body
  margin: 0
  display: flex
  color: var(--n6)
  scrollbar-width: none
input
body
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, "Apple Color Emoji", Arial, sans-serif, "Segoe UI Emoji", "Segoe UI Symbol"

#pages
  height: 100vh
  overflow: hidden
  width: calc(100vw - 280px)
  position: relative

#home
  padding: 0 16px
#user
  padding: 30px 50px
  &[active]
    display: block
  header
    display: flex
    justify-content: space-between
  .hero
    position: relative
    width: 100%
    max-width: 400px
    padding-right: 40px
  .subtitle
    font-size: 20px
    font-weight: 500
    line-height: 24px
    color: var(--n3)
    position: absolute
    left: 140px
    top: 76px

  .money
  .subscribers
    padding-top: 16px
    padding-right: 120px
    position: relative
    .title
      font-size: 54px
      font-weight: 600
      color: var(--n4)
      margin-bottom: 10px
    .label
      font-size: 14px
      text-transform: uppercase
      color: var(--n3)
    .up
      color: var(--g2)
      font-weight: bold
      font-size: 16px
      padding-left: 18px
      position: absolute
      right: 40px
      top: 28px
      &:before
        position: absolute
        left: 0
        top: 3px
        border-bottom: 12px solid var(--g2)
        border-right: 6px solid transparent
        border-left: 6px solid transparent
        content: ''
        display: block
        width: 0
        height: 0

  .content
    display: flex
    margin-top: 40px
    .col
      border-top: 1px solid var(--n2)
      width: 100%
      margin-right: 40px
      &:last-child
        margin-right: 0px
      .col-header
        color: var(--n3)
        text-transform: uppercase
        display: flex
        align-items: center
        height: 60px
        soci-icon
          margin-right: 8px
      soci-post-list
        padding: 0

#home
  h1
    transform: translateY(10px)
    opacity: 0
    transition: all 0.3s ease-in-out
  &[active]
    h1
      transform: translateY(0)
      opacity: 1
#tags
  scroll-snap-type: x proximity;
  scroll-padding: 16px;
  padding-top: 16px;
  soci-column
    transform: translateY(10px)
    opacity: 0
    transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out, margin 0.3s ease-out
  &[active]
    soci-column
      transform: translateY(0)
      opacity: 1
      &:nth-child(2)
        transition-delay: 0.1s
      &:nth-child(3)
        transition-delay: 0.2s
      &:nth-child(4)
        transition-delay: 0.3s
      &.inserting
        opacity: 0
        transform: translateX(-200px)
        margin-left: -416px

#user
  header
  .content
    transform: translateY(10px)
    opacity: 0
    transition: all 0.3s ease-in-out
  &[active]
    header
    .content
      transform: translateY(0)
      opacity: 1
    .content
      transition-delay: 0.1s

#submit-container
  max-width: 1200px
  padding: 0 40px
  margin: 0 auto
  box-sizing: border-box
  .url
    display: flex
    height: 32px
    line-height: 28px
    border: 2px solid var(--n2)
    box-sizing: border-box
    width: 100%
    font-size: 14px
    padding: 0 8px
    border-radius: 16px
    transition: all 0.2s ease-in-out 0.3s
    &[available="true"]
      text-decoration: underline
      background: var(--b2)
      border: 2px solid var(--b2);
      color: #fff
      cursor: pointer
      input
        cursor: pointer

    &[available="false"]
      border: 2px solid var(--r3);
  label
    cursor: inherit
  input
    text-decoration: inherit
    border: none
    outline: none
    padding: 0
    font-size: 14px
    width: 100%
    background: transparent
    color: inherit
    &::placeholder 
      text-transform: none;
      font-size: 14px
      padding-left: 12px

