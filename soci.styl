  .tabs
    display: flex
    color: var(--n3)
    margin-top: 24px
    .tab
      margin-right: 42px
      font-weight: 500
      position: relative
      cursor: pointer
      &:hover
        color: var(--n4)
      &[active]
        color: var(--n4)
        &:after
          content: ''
          height: 4px
          width: 16px
          background-color: var(--n4)
          display: block
          position: absolute
          top: -4px
          border-radius: 2px
          left: calc(50% - 8px)


  .drop-area
    width: 540px
    height: 240px
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    border 2px dashed var(--n2)
    margin-top: 18px
    border-radius: 8px
    .label
      font-weight: 500
      color: var(--n3)
      margin-bottom: 12px
    button
      border-radius: 14px
      height: 28px
      color: var(--n0)
      cursor: pointer
      background: var(--b3)
      border: none
      padding: 0 8px
      outline: none
      &:active
        background: var(--b2)