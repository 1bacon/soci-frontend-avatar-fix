#submit-container
  h1 Submit post
  
  soci-url-input
  
  soci-tab-group
    soci-tab(name="Image")
      soci-file-drop(type="image")
      h2 Description
      soci-input(placeholder="Enter description")

    soci-tab(name="Video" default)
      soci-file-drop(type="video")
      h2 Description
      soci-input(placeholder="Enter description")
        
    soci-tab(name="Audio")
      soci-file-drop(type="audio")
      h2 Description
      soci-input(placeholder="Enter description")

    soci-tab(name="Blog")
      soci-input(placeholder="Write your best")

    soci-tab(name="HTML")
      soci-file-drop(type="html")
  

  h2 Tags
  .tags
    soci-tag-input
    soci-tag-input
    soci-tag-input

  button(onclick="submit.submit()") submit

script(src="pages/submit.js")
  

    

